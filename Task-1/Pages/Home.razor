<script>
    function showAuthModal(message) {
    document.getElementById('authModalMessage').innerText = message;
    var modal = new bootstrap.Modal(document.getElementById('authModal'));
    modal.show();
    }
</script>






<script>
    function showMessage(message, type = 'success') {
    const messageContainer = document.getElementById('messageContainer');
    messageContainer.innerText = message;

    // Set the color based on message type
    switch (type) {
    case 'success':
    messageContainer.style.backgroundColor = '#d4edda'; /* Light green */
    messageContainer.style.color = '#155724'; /* Dark green */
    break;
    case 'error':
    messageContainer.style.backgroundColor = '#f8d7da'; /* Light red */
    messageContainer.style.color = '#721c24'; /* Dark red */
    break;
    case 'info':
    messageContainer.style.backgroundColor = '#d1ecf1'; /* Light blue */
    messageContainer.style.color = '#0c5460'; /* Dark blue */
    break;
    default:
    messageContainer.style.backgroundColor = '#d4edda'; /* Default to light green */
    messageContainer.style.color = '#155724'; /* Default to dark green */
    break;
    }

    // Show the message container
    messageContainer.classList.add('show');

    // Hide after 5 seconds
    setTimeout(() => {
    messageContainer.classList.remove('show');65
    }, 5000);
    }

</script>



