@using Blazored.LocalStorage
@using Microsoft.AspNetCore.Identity
@using Task_1.Authentication
@using Task_1.DbCon
@inject EmployeeService employeeeservice
@inject UserAccountService userAccountService
@inject IJSRuntime js
@inject AuthenticationStateProvider authStateProvider
@inject CustomAuthenticationStateProvider CustomAuthenticationStateProvider
@inject ILocalStorageService _sessionStorage
@inject EditStateService EditStateService
@inject NavigationManager navManager
@inject CustomerDbContext _customerDbContext
@inject Blazored.SessionStorage.ISessionStorageService SessionStorage


<nav class="navbar">
    <div class="container">
        <div class="row justify-content-between align-items-center">
            <div class="logo">Time<span class="backcolor">Sheet</span></div>
        </div>
    </div>
</nav>

<section>
    <div class="container">
        <div class="row full-screen align-items-center">
            <div class="left">
                <span class="line"></span>
                <h2>Welcome To <span class="backcolorr">BusOn,</span><br></h2>
                <p>"Time is the scarcest resource, and unless it is managed, nothing else can be managed." <br> <strong class="backcolorr">– Unknown</strong></p>
            </div>
            <div class="right">
                <div class="form">
                    <div class="text-center">
                        @* <h6><span>Log In</span> <span>Sign Up</span></h6> *@
                        <input type="checkbox" class="checkbox" id="reg-log">
                        @* <label for="reg-log"></label> *@
                        <div class="card-3d-wrap">
                            <div class="card-3d-wrapper">
                                <div class="card-front">
                                    <div class="center-wrap">
                                        <h4 class="heading">Log In</h4>
                                        <div class="form-group">
                                            <input type="text" class="form-style" placeholder="Your Name" autocomplete="off" @bind="employee.EMP_NAME">
                                            <i class="input-icon material-icons">alternate_email</i>
                                        </div>

                                        <div class="form-group">
                                            <input type="password" class="form-style" placeholder="Your Password" autocomplete="off" @bind="employee.EMP_PASSWORD" />
                                            <i class="input-icon material-icons">lock</i>
                                        </div>

                                        <button class="btn" @onclick="Authenticate">Submit</button>
                                        <p class="text-center"><label class="link" for="reg-log">Forgot your password?</label></p>
                                    </div>
                                </div>

                                <div class="card-back">
                                    <div class="center-wrap">
                                        <h4 class="heading">Forgot Password</h4>
                                        <div class="form-group">
                                            <input type="text" class="form-style" placeholder="Your Name" autocomplete="off" @bind="forgotPasswordUserName">
                                            <i class="input-icon material-icons">perm_identity</i>
                                        </div>

                                        <div class="form-group">
                                            <input type="text" class="form-style" placeholder="Your Mobile Number" autocomplete="off" @bind="contactNumber">
                                            <i class="input-icon material-icons">alternate_email</i>
                                        </div>

                                        <div class="form-group">
                                            <input type="password" class="form-style" placeholder="New Password" autocomplete="off" @bind="newPassword">
                                            <i class="input-icon material-icons">lock</i>
                                        </div>

                                        <div class="form-group">
                                            <input type="password" class="form-style" placeholder="Confirm Password" autocomplete="off" @bind="confirmPassword">
                                            <i class="input-icon material-icons">lock</i>
                                        </div>

                                        <div style="display: flex; justify-content: space-between;">
                                            <span class="text-center"><label class="btn" for="reg-log">back</label></span>
                                            <a for="reg-log" class="btn" @onclick="ResetPassword">Submit</a>
                                        </div>


                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


@if (isForgotPasswordModalOpen)
{
    <div class="modal fade show" tabindex="-1" style="display:block;">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Reset Password</h5>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <input type="text" class="form-control" @bind="forgotPasswordUserName" placeholder="Username" />
                    </div>
                    <div class="mb-3">
                        <input type="text" class="form-control" @bind="contactNumber" placeholder="Contact Number" />
                    </div>

                    <div class="mb-3">
                        <input type="password" class="form-control" @bind="newPassword" placeholder="New Password" />
                    </div>
                    <div class="mb-3">
                        <input type="password" class="form-control" @bind="confirmPassword" placeholder="Confirm Password" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" @onclick="CloseForgotPasswordModal">Cancel</button>
                    <button class="btnlog" @onclick="ResetPassword">Reset Password</button>
                </div>
            </div>
        </div>
    </div>
}